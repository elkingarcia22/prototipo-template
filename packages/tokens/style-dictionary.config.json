{
  "source": ["packages/tokens/tokens.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "packages/tokens/dist/",
      "files": [
        { "destination": "tokens.css", "format": "css/variables", "options": { "outputReferences": false } }
      ]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "packages/tokens/dist/",
      "files": [
        { "destination": "tokens.js", "format": "javascript/module" }
      ]
    }
  }
}
