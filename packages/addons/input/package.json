{
  "name": "@ubits/input",
  "version": "1.0.0",
  "description": "Componente Input UBITS como add-on intercambiable con todos los tipos y variantes",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "tsc --watch",
    "lint": "biome check .",
    "format": "biome format . --write"
  },
  "dependencies": {
    "@ubits/tokens": "workspace:*",
    "@ubits/icons": "workspace:*",
    "@ubits/typography": "workspace:*",
    "@ubits/list": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vite": "^7.1.12"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/input.css"
  }
}

