{
  "name": "prototipo-template",
  "version": "1.0.0",
  "description": "Template robusto para prototipos funcionales con onboarding, analytics y feedback",
  "type": "module",
  "scripts": {
    "postinstall": "npm run gate:dir",
    "gate:dir": "node -e \"const fs=require('fs');if(!(fs.existsSync('package.json')&&fs.existsSync('components')))process.exit(1)\"",
    "gate:env": "node scripts/check-env.js",
    "gate:components": "node scripts/check-components.js",
    "gate:deployment": "node scripts/check-deployment.js",
    "dev": "npm run gate:dir && npm run gate:env && vite dev",
    "build": "npm run gate:dir && vite build",
    "preview": "vite preview",
    "setup": "node scripts/setup-project.js",
    "deploy": "npm run gate:deployment && npm run build",
    "start": "node server.js",
    "serve": "node server.js"
  },
  "keywords": [
    "prototype",
    "template",
    "onboarding",
    "analytics",
    "feedback",
    "cursor",
    "github"
  ],
  "author": "Elkin Garcia",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "style-dictionary": "^3.9.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "alpinejs": "^3.13.0",
    "express": "^4.21.2",
    "vue": "^3.5.22"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
